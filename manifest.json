{
  "name": "Garoon to Google Spreadsheet",
  "description": "Garoon のスケジュールを Google のスプレッドシートに記入します。情報は定期的に取得しますが、Chrome のタブのどこかにログイン済みの Garoon が存在する必要があります。",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": ["identity", "storage", "alarms", "scripting", "activeTab"],
  "oauth2": {
    "client_id": "876837121099-943s6rvpd7qsc3broci63cug3tbq4m0i.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/spreadsheets"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "hello_extensions.png"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/chrome.js"]
    }
  ]
}
