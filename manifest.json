{
  "name": "Garoon to Google Spreadsheet",
  "description": "This extension periodically records Garoon schedules into Google SpreadSheets.",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": ["identity", "storage", "alarms", "scripting", "activeTab"],
  "oauth2": {
    "client_id": "876837121099-943s6rvpd7qsc3broci63cug3tbq4m0i.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/spreadsheets"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/chrome.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
